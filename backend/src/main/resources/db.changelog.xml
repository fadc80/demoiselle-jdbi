<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.7"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.7
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.7.xsd">
	<preConditions>
		<dbms type="postgresql" />
		<runningAs username="postgres" />
	</preConditions>
	<changeSet id="1" author="fernando.costa">
		<createTable tableName="contact">
			<column name="id" type="bigint" autoIncrement="true">
				<constraints primaryKey="true" primaryKeyName="id_pk"/>
			</column>
			<column name="first_name" type="varchar(100)">
				<constraints nullable="false" unique="true"/>
			</column>
			<column name="last_name" type="varchar(100)"/>
		</createTable>
	</changeSet>
	<changeSet id="2" author="fernando.costa">
		<createTable tableName="phone_number">
			<column name="contact_id" type="bigint">
				<constraints nullable="false" references="contact(id)" foreignKeyName="contact_id_fk" />
			</column>
			<column name="it" type="varchar(20)">
				<constraints nullable="false" unique="true"/>
			</column>
		</createTable>
	</changeSet>	
	<changeSet id="3" author="fernando.costa">
		<loadData tableName="contact" file="src/main/resources/table-contact.csv" encoding="UTF-8"/>
	</changeSet>
	<changeSet id="4" author="fernando.costa">
		<loadData tableName="phone_number" file="src/main/resources/table-phone-number.csv" encoding="UTF-8"/>
	</changeSet>	
</databaseChangeLog>         